<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardBackgroundColor="@color/whiteBodyColor"
        card_view:cardPreventCornerOverlap="false"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/avatar_of_tour"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/frutorials" />

            <TextView
                android:id="@+id/name_of_tour"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_of_tour"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="tên của tour"
                android:textColor="@color/frutorial_title"
                android:textSize="@dimen/frutorial_title" />

            <TextView
                android:id="@+id/rate_of_tour"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_of_tour"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="đánh giá"
                android:textColor="@color/frutorial_title"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/address_of_tour"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rate_of_tour"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="địa điểm"
                android:textColor="@color/frutorial_title"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/price_of_tour"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_of_tour"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="giá"
                android:textColor="@color/frutorial_title"
                android:textSize="10dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatar_of_tour"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="-40dp"
                android:src="@android:drawable/ic_media_play" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
